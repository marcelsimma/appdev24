    <style>
        /* Stile für die ersten zwei Tabellen */
        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
            border: 4px solid black; /* Dicker Rahmen */
        }
        td, th {
            border: 2px solid black; /* Dicke Zellränder */
            padding: 10px;
            text-align: left;
            border-style: groove;
        }
        .gray {
            background-color: gray;
        }
        .white {
            background-color: lightgray;
        }

        /* Stile für die vorletzte Tabelle */
        .no-border {
            border: none;
        }
        .no-border td, 
        .no-border th {
            border: none;
        }

        /* Stile für die vorletzte Tabelle */
        .transparent-border {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
            border: 4px solid white; /* Dicker Rahmen */
        }
        .transparent-border td, 
        .transparent-border th {
            border: 4px solid white; /* Dicke Zellränder */
            padding: 20px;
            text-align: left;
            border-style: groove;
        }
    </style>
</head>
